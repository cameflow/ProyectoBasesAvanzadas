<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Listing Orders</h1>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
    <% if @orders %>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.created %></td>
          <td><%= link_to 'Entregar', deliver_path(:nom => order.name) , :class=>'btn-sm btn-primary' %></td>
        </tr>
      <% end %>
    <% else %>
    <tr>

        <h1>NO HAY NINGUNA ORDEN</h1>

    </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
