<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Listing Ingredients</h1>
  <hr>
  <table  class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cost</th>
      </tr>
    </thead>

    <tbody>
      <% @ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.name %></td>
          <td><%= ingredient.cost %></td>
          <% if logged_in? && (current_user.role == 1 || current_user.role ==2) %>
            <td><%= link_to 'Comprar', new_sing_path(:nom => ingredient.name) , :class=>'btn-sm btn-primary' %></td>
          <% end %>
          <% if logged_in? && current_user.role == 1%>
            <td><%= link_to 'Edit', edit_ingredient_path(ingredient), :class=>'btn-sm btn-warning'  %></td>
            <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn-sm btn-danger'  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% if logged_in? && current_user.role == 1%>
  <div class="new-button"><%= link_to 'New Ingredient', new_ingredient_path , :class=>'btn btn-success'%></div>
<% end %>
</div>
