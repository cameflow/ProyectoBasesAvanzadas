<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Listing Recipes</h1>
<hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.name %></td>
          <td><%= recipe.description %></td>
          <td><%= link_to 'Show', recipe, :class=>'btn-sm btn-success' %></td>
          <% if logged_in? && current_user.role == 1%>
            <td><%= link_to 'Edit', edit_recipe_path(recipe), :class=>'btn-sm btn-warning'  %></td>
            <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn-sm btn-danger'  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if is_chef? %>
  <div class="new-button"><%= link_to 'New Recipe', new_recipe_path, :class=>'btn btn-success'  %></div>
  <%end%>
</div>
