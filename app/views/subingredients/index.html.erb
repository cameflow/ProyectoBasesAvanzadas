
<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Ingredientes en el Almacen</h1>
  <hr>
  <table  class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Exp date</th>
      </tr>
    </thead>

    <tbody>
      <% @subingredients.each do |subingredient| %>
        <tr>
          <td><%= subingredient[:result_subingredients].name %></td>
          <td><%= subingredient[:result_subingredients].amount %></td>
          <td><%= subingredient[:result_subingredients].exp_date %></td>
          <% if logged_in? && current_user.role == 1%>
            <td><%= link_to 'Edit', edit_subingredient_path(subingredient[:result_subingredients]) , :class=>'btn-sm btn-warning' %></td>
            <td><%= link_to 'Destroy', subingredient[:result_subingredients], method: :delete, data: { confirm: 'Are you sure?' } , :class=>'btn-sm btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
