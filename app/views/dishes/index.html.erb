<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Listing Dishes</h1>
  <hr>
  <table  class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cost</th>
      </tr>
    </thead>

    <tbody>
      <% @dishes.each do |dish| %>
        <tr>
          <td><%= dish.name %></td>
          <td><%= dish.cost %></td>
          <% if logged_in? && current_user.role == 1%>
            <td><%= link_to 'Edit', edit_dish_path(dish) , :class=>'btn-sm btn-warning' %></td>
          <% end %>
          <% if logged_in? && (current_user.role == 1 || current_user.role ==2) %>
            <td><%= link_to 'Preparar', new_sub_path(:nom => dish.name) , :class=>'btn-sm btn-primary' %></td>
          <% end %>
          <% if logged_in? && current_user.role == 3 %>
            <td><%= link_to 'Ordenar', make_order_path(:nom => dish.name) , :class=>'btn-sm btn-primary' %></td>
          <% end %>
          <% if logged_in? && current_user.role == 1%>
            <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } , :class=>'btn-sm btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
