<div class="index">
  <p id="notice"><%= notice %></p>

  <h1>Listing Subdishes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Exp date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @subdishes.each do |subdish| %>
        <tr>
          <td><%= subdish.name %></td>
          <td><%= subdish.amount %></td>
          <td><%= subdish.exp_date %></td>
          <td><%= link_to 'Show', subdish, :class=>'btn-sm btn-success'  %></td>
          <td><%= link_to 'Edit', edit_subdish_path(subdish), :class=>'btn-sm btn-warning'  %></td>
          <td><%= link_to 'Destroy', subdish, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn-sm btn-danger'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="new-button"><%= link_to 'New Subdish', new_subdish_path, :class=>'btn btn-success'   %></div>

</div>
